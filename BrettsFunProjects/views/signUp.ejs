<!doctype html>

<html lang="en">
<head>

    <title>Chat Box</title><!--Title of each individual page-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bxslider/4.2.15/jquery.bxslider.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bxslider/4.2.15/jquery.bxslider.min.js"></script>
    <link rel='stylesheet' type="text/css" href='../assets/index.css' />


</head>

<body>
<main>
    <%- include('partials/nav.ejs') %>
    <div id="content">
        <img class="menuLogo2" src="assets/images/SignUp.gif" alt="MovieScope">

        <%if((typeof data.v !== 'undefined' && data.v === 2)){%>
            <h3 class="centerTable">Account is already taken!</h3>
        <%}%>

        <div>
            <%console.log(data.errors)%>
            <%if(typeof data.errors !== 'undefined' && typeof data.errors[0] !== 'undefined'){%>
            <h3 class="error"><small>* <%=data.errors[0].msg%></small></h3>
            <%}%>
        </div>

        <form class="centerPostFormNoBor" action="/c" method="post">
            <table class="genTable">
                <tr>
                    <td>
                        <label class="SUForm" for="userID">Username:</label><br>
                        <input type="text" id="userID" name="userID" value="<%= data.qs.userID%>" placeholder=" username1"><br><br>
                    </td>
                    <td>
                        <label class="SUForm" for="password">Password:</label><br>
                        <input type="password" id="password" name="password" value="<%= data.qs.password%>" placeholder=" password"><br><br>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="SUForm" for="firstN">First Name:</label><br>
                        <input type="text" id="firstN" name="firstN" value="<%= data.qs.firstN%>" placeholder=" John"><br><br>
                    </td>
                    <td>
                        <label class="SUForm" for="lastN">Last Name:</label><br>
                        <input type="text" id="lastN" name="lastN" value="<%= data.qs.lastN%>" placeholder=" Doe"><br><br>
                    </td>
                </tr>
            </table>
            <br><br>
            <input class="button" type="submit" value="Submit">
            <br><br>
            <a href="/login">Already have an account?</a>
        </form>



    </div><br><br>
</main>

<!--<%-// include('partials/footer.ejs') %> For some reason this doesnt work-->

</body>